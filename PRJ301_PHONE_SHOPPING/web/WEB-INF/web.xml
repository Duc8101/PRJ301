<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationCustomerFilter</filter-name>
        <filter-class>Filter.AuthenticationCustomerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationCustomerAndSellerFilter</filter-name>
        <filter-class>Filter.AuthenticationCustomerAndSellerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationGuestAndCustomerFilter</filter-name>
        <filter-class>Filter.AuthenticationGuestAndCustomerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationSellerFilter</filter-name>
        <filter-class>Filter.AuthenticationSellerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationSellerFilter</filter-name>
        <url-pattern>/ManagerOrder</url-pattern>
        <url-pattern>/ManagerProduct</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationGuestAndCustomerFilter</filter-name>
        <url-pattern>/Cart</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationCustomerAndSellerFilter</filter-name>
        <url-pattern>/Profile</url-pattern>
        <url-pattern>/ChangePassword</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationCustomerFilter</filter-name>
        <url-pattern>/MyOrder</url-pattern>
        <url-pattern>/ViewSeller</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>Controller.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>Controller.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyOrderServlet</servlet-name>
        <servlet-class>Controller.MyOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSellerServlet</servlet-name>
        <servlet-class>Controller.ViewSellerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>Controller.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerProductServlet</servlet-name>
        <servlet-class>Controller.ManagerProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <servlet-class>Controller.ManagerOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>Controller.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/Cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyOrderServlet</servlet-name>
        <url-pattern>/MyOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSellerServlet</servlet-name>
        <url-pattern>/ViewSeller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerProductServlet</servlet-name>
        <url-pattern>/ManagerProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerOrderServlet</servlet-name>
        <url-pattern>/ManagerOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/Error</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
